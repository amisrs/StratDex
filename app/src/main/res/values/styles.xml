<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="Ayy" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="detailGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/greenBackground</item>
        <item name="colorPrimaryDark">@color/greenAccent</item>
        <item name="android:colorBackground">@color/greenBackground</item>
        <item name="android:textColorPrimary">#33691E</item>
        <item name="android:navigationBarColor">@color/black</item>

    </style>

</resources>
